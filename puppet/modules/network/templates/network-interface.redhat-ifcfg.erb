<% if @interface == "eth0" -%>
# The primary (eth0) network interface
<% end -%>
<% if @comment != "" -%>
# <%= @comment %>
<% end -%>
DEVICE=<%= @interface %>
<% if @address == "" -%>
<%      if @dhcp -%>
BOOTPROTO=dhcp
<%      elsif @manual -%>
BOOTPROTO=none
<%      end -%>
<% else -%>
BOOTPROTO=static
IPADDR=<%= @address %>
NETMASK=<%= @netmask %>
<%      if @network != "" -%>
NETWORK=<%= @network %>
<%      end -%>
<%      if @broadcast != "" -%>
# The BROADCAST directive is deprecated, as the value is calculated automatically with ifcalc.
BROADCAST=<%= @broadcast %>
<%      end -%>
<%      if @gateway != "" -%>
GATEWAY=<%= @gateway %>
<%      end -%>
<% end -%>
<% if @hwaddr != "" -%>
HWADDR=<%= @hwaddr %>
<% end -%>
<% if @nettype != "" -%>
TYPE=<%= @nettype %>
<% end -%>

<% if @auto == true -%>
ONBOOT=yes
<% else -%>
ONBOOT=no
<% end -%>
<% if @hotplug == true -%>
HOTPLUG=yes
<% end -%>
<% if @connected_mode == true -%>
CONNECTED_MODE=yes
<% end -%>
<% if @dns_nameservers != "" -%>
# DNS specific options
PEERDNS=no
<%  if @dns_nameservers_array.empty? == false -%>
DNS1=<%= @dns_nameservers.at(0) %>
<%      if @dns_nameservers.at(1) != "" -%>
DNS2=<%= @dns_nameservers.at(1) %>
<%      end -%>
<%  end -%>
<%      if @dns_search != "" -%>
# dns-search not supported on redhat-like systems (value: '<%= @dns_search %>')
<%      end -%>
<% end -%>
