whenever sqlerror exit sql.sqlcode

<% if @password -%>
connect <%= @username -%>/<%= @password -%>
<% else -%>
connect / as <%= @username -%>
<% end %>

<% if @failonsqlfail -%>
whenever sqlerror exit sql.sqlcode
<% else -%>
whenever sqlerror continue
<% end -%>

set pagesize 0 emb on newpage none
set newpage 0
set space 0
set linesize 32767
set echo off
set feedback off
set verify off
set heading on
set markup html off
set colsep ','

spool <%= output_file %>
<%= command %>;
spool off
